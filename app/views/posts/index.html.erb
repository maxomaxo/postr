

<strong>Here's some poasts</strong><br>
<%= link_to 'Make a new one', new_post_path %>
<table>
	<tr>
		<th>Title</th>
		<th colspan="1"></th>
	</tr>

<% @posts.each do |post| %>
	<tr>
		<td><%= post.title %></td> 
		<td><%= link_to 'Show', post_path(post) %></td>
		<td><%= link_to 'Edit', edit_post_path(post) %></td>
		<td><%= link_to 'Destroy', post_path(post),
						method: :delete, data: {confirm: 'Are you sure?'
} %></td>
  </tr>
<% end %>
</table>

